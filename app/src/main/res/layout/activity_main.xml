<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D3C9C9"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/namelastEt"
        android:layout_width="258dp"
        android:layout_height="57dp"
        android:layout_marginTop="16dp"
        android:background="#4B59C0"
        android:inputType="text"
        android:textColorHint="#FFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.739"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ageEt"
        android:layout_width="258dp"
        android:layout_height="57dp"
        android:layout_marginTop="36dp"
        android:background="#4B59C0"
        android:inputType="text"
        android:textColorHint="#FFF"
        app:layout_constraintStart_toStartOf="@+id/namelastEt"
        app:layout_constraintTop_toBottomOf="@+id/namelastEt" />

    <EditText
        android:id="@+id/phoneEt"
        android:layout_width="258dp"
        android:layout_height="57dp"
        android:layout_marginTop="36dp"
        android:background="#4B59C0"
        android:inputType="text"
        android:textColorHint="#FFF"
        app:layout_constraintEnd_toEndOf="@+id/ageEt"
        app:layout_constraintStart_toStartOf="@+id/ageEt"
        app:layout_constraintTop_toBottomOf="@+id/ageEt" />

    <EditText
        android:id="@+id/emailEt"
        android:layout_width="258dp"
        android:layout_height="57dp"
        android:layout_marginTop="36dp"
        android:background="#4B59C0"
        android:inputType="text"
        android:textColorHint="#FFF"
        app:layout_constraintEnd_toEndOf="@+id/phoneEt"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/phoneEt"
        app:layout_constraintTop_toBottomOf="@+id/phoneEt" />

    <EditText
        android:id="@+id/departmentEt"
        android:layout_width="258dp"
        android:layout_height="57dp"
        android:layout_marginTop="36dp"
        android:background="#4B59C0"
        android:inputType="text"
        android:textColorHint="#FFF"
        app:layout_constraintEnd_toEndOf="@+id/emailEt"
        app:layout_constraintStart_toStartOf="@+id/emailEt"
        app:layout_constraintTop_toBottomOf="@+id/emailEt" />

    <EditText
        android:id="@+id/nicknameEt"
        android:layout_width="258dp"
        android:layout_height="57dp"
        android:layout_marginTop="36dp"
        android:background="#4B59C0"
        android:inputType="text"
        android:textColorHint="#FFF"
        app:layout_constraintEnd_toEndOf="@+id/departmentEt"
        app:layout_constraintStart_toStartOf="@+id/departmentEt"
        app:layout_constraintTop_toBottomOf="@+id/departmentEt" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="114dp"
        android:layout_height="32dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="40dp"
        android:text="ชื่อ-นามสกุล :"
        android:textColor="#000000"
        android:textSize="19dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:textColor="#000000"
        android:text="อายุ :"
        android:textSize="22dp"
        app:layout_constraintEnd_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:textColor="#000000"
        android:text="เบอร์โทร :"
        android:textSize="22dp"
        app:layout_constraintEnd_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="68dp"
        android:layout_height="42dp"
        android:layout_marginTop="60dp"
        android:text="อีเมล :"
        android:textColor="#000000"
        android:textSize="22dp"
        app:layout_constraintEnd_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="แผนก :"
        android:textColor="#000000"
        android:textSize="22dp"
        app:layout_constraintEnd_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="ชื่อเล่น :"
        android:textColor="#000000"
        android:textSize="22dp"
        app:layout_constraintEnd_toEndOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <Button
        android:id="@+id/saveBtn"
        android:layout_width="238dp"
        android:layout_height="65dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#FF5722"
        android:text="ส่งข้อมูล"
        android:background="@drawable/green"
        android:textColor="#FFFFFF"
        android:textSize="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nicknameEt" />

    <Button
        android:id="@+id/closeBtn"
        android:layout_width="238dp"
        android:layout_height="65dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/green"
        android:backgroundTint="#000000"
        android:text="จบการทำงาน"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#FFFFFF"
        android:textSize="22dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/saveBtn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/saveBtn"
        app:layout_constraintTop_toBottomOf="@+id/saveBtn"
        app:layout_constraintVertical_bias="0.387" />

</androidx.constraintlayout.widget.ConstraintLayout>
